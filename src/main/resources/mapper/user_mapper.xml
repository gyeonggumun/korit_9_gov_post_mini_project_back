<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.post_mini_project_back.mapper.UserMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
        insert into user_tb
        values (default, #{oauth2Id}, #{nickname}, #{name}, #{email}, #{provider}, #{role}, now())
    </insert>
    <select id="findByUserId" resultType="User">
        select
            user_id,
            oauth2_id,
            nickname,
            name,
            email,
            provider,
            role,
            created_at
        from
            user_tb
        where
            user_id = #{userId}
    </select>
    <select id="findByOauth2Id" resultType="User">
        select
            user_id,
            oauth2_id,
            nickname,
            name,
            email,
            provider,
            role,
            created_at
        from
            user_tb
        where
            oauth2_id = #{oauth2Id}
    </select>
    <select id="findByNickName" resultType="User">
        select
            user_id,
            oauth2_id,
            nickname,
            name,
            email,
            provider,
            role,
            created_at
        from
            user_tb
        where
            nickname = #{nickname}
    </select>
</mapper>